    <EditText android:id="@+id/etGoalAmount" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:hint="Goal Amount" android:inputType="number"/>

    <EditText android:id="@+id/etGoalDesc" android:layout_width="match_parent"
