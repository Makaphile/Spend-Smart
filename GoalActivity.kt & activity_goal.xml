package com.example.spendsmart

import android.os.Bundle
import android.widget.Button
import android.widget.EditText
import android.widget.Toast
import androidx.appcompat.app.AppCompatActivity

class GoalActivity : AppCompatActivity() {
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_goal)

        val etGoalAmount = findViewById<EditText>(R.id.etGoalAmount)
        val etGoalDesc = findViewById<EditText>(R.id.etGoalDesc)
        val btnSetGoal = findViewById<Button>(R.id.btnSetGoal)
       btnSetGoal.setOnClickListener {
            val amt = etGoalAmount.text.toString().trim()
            val desc = etGoalDesc.text.toString().trim()
            Toast.makeText(this, "Goal '$desc' of R$amt set", Toast.LENGTH_SHORT).show()
        }
    }
}

